{% extends "::front.html.twig" %}

{% block title %}
	{{ parent() }}Ajout Theme
{% endblock %}

{% block content %}

<div class="waBlock">
	<div class="container">
		<h1>Ajouter un thème de la semaine</h1>

		<p>
			<a href="{{ path('wa_admin_homepage') }}">Retour à l'administration</a>
		</p>
		
		<form method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
			<span class="out-bt"><button type="submit" class="btn btn-primary">Ajouter</button></span>
		</form>
	</div>
</div>

{% endblock %}